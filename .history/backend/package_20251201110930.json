{
  "name": "containerreseu-backend",
  "version": "1.0.0",
  "description": "Backend API for Container Reseu project",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-js",
    "copy-js": "node -e \"const fs=require('fs'); const path=require('path'); const src='src/services/containerApiService.js'; const dest='dist/services/containerApiService.js'; fs.mkdirSync(path.dirname(dest), {recursive:true}); fs.copyFileSync(src, dest); console.log('âœ… Copied containerApiService.js to dist');\"",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint src --ext .ts",
    "test": "jest"
  },
  "keywords": [
    "express",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
